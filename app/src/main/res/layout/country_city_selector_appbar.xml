<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="?attr/actionBarSize"
  android:orientation="horizontal"
  android:id="@+id/citySelectorAppbar"
  android:theme="@style/ThemeOverlay.AppCompat.Dark"
  android:layout_marginTop="@dimen/appbar_selector_marginTop"
  android:layout_marginStart="@dimen/appbar_selector_marginStart"
  android:layout_marginEnd="@dimen/appbar_selector_marginEnd">

  <ImageView
    android:id="@+id/appbar_backButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/appbar_selector_arrow_back_marginStart"
    android:src="@drawable/ic_arrow_back"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/appbar_city_selection_marginStart"
    android:text="@string/city_selection"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toEndOf="@+id/appbar_backButton"
    app:layout_constraintTop_toTopOf="parent"
    android:textColor="@color/white"
    android:textSize="@dimen/appbar_city_selection_textSize"/>

</androidx.constraintlayout.widget.ConstraintLayout>