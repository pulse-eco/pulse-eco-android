<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/slotConstraintLayout"
  android:layout_width="36dp"
  android:layout_height="36dp"
  android:layout_marginTop="@dimen/calendar_border_half_margin"
  android:layout_gravity="center"
  tools:background="@drawable/calendar_circle">

  <TextView
    android:id="@+id/dayTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:textColor="@color/black"
    android:textSize="@dimen/calendar_element_text_size"
    android:background="@drawable/calendar_circle_text_view"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="13"/>

</androidx.constraintlayout.widget.ConstraintLayout>