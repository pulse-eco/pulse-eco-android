<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              tools:background="@color/bottom_sheet_default_peek">

  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/noSensorsSelected"
    android:gravity="center_horizontal"
    android:textSize="@dimen/no_sensors_selected_text_size"
    android:textColor="@color/bottom_sheet_text"
    android:text="@string/default_no_sensors_selected"
    android:layout_marginBottom="@dimen/no_sensors_selected_text_view_margin_bottom"
    android:layout_marginTop="@dimen/no_sensors_selected_text_view_margin_top"
    android:layout_marginStart="@dimen/no_sensors_selected_text_view_margin_start"
    android:layout_marginEnd="@dimen/no_sensors_selected_text_view_margin_end"
    android:visibility="gone"
    tools:visibility="visible"/>

  <LinearLayout
    android:id="@+id/hasSelectedSensors"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/has_sensors_selected_margin_top"
    android:layout_marginBottom="@dimen/has_sensors_selected_margin_bottom"
    android:layout_marginEnd="@dimen/has_sensors_selected_margin_end"
    android:layout_marginStart="@dimen/has_sensors_selected_margin_start"
    android:gravity="center_vertical"
    android:visibility="gone"
    tools:visibility="visible">

    <TextView
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:textSize="@dimen/has_sensors_selected_text_size"
      android:textColor="@color/bottom_sheet_text_primary"
      android:text="@string/sensors_selected"/>

    <ImageView
      android:id="@+id/editSelectedSensors"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/ic_gear"
      android:background="?selectableItemBackgroundBorderless"/>

  </LinearLayout>

</LinearLayout>