<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@color/city_select_item_overlay"
  android:orientation="horizontal"
  android:weightSum="1">

  <View android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="0.05" />

  <androidx.cardview.widget.CardView
    android:id="@+id/cardViewCityCurrentData"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/city_select_margins"
    android:layout_marginTop="@dimen/city_select_layout_margins"
    android:layout_weight="0.9"
    app:cardCornerRadius="@dimen/components_corner_radius"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/city_select_item_overlay">

      <TextView
        android:id="@+id/textViewCityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/city_select_layout_margins"
        android:layout_marginTop="@dimen/city_select_layout_margins"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/city_select_label_text_color"
        android:textSize="@dimen/city_item_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Skopje" />

      <TextView
        android:id="@+id/textViewCountryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textColor="@color/transparent_black"
        android:textSize="@dimen/country_item_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewCityName"
        tools:text="Macedonia" />

      <TextView
        android:id="@+id/textViewShortGrade"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/city_select_layout_margins"
        android:layout_marginEnd="@dimen/components_between_spacing"
        android:layout_marginTop="@dimen/components_between_spacing"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/city_select_label_text_color"
        android:textSize="@dimen/country_city_selector_small_country_font_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cardViewMeasurementColor"
        app:layout_constraintStart_toStartOf="@id/textViewCountryName"
        app:layout_constraintTop_toBottomOf="@id/textViewCountryName"
        tools:text="Good Air Quality!" />

      <androidx.cardview.widget.CardView
        android:id="@+id/cardViewMeasurementColor"
        android:layout_width="@dimen/city_select_width"
        android:layout_height="@dimen/city_select_height"
        android:layout_marginEnd="@dimen/city_select_layout_margins"
        app:cardBackgroundColor="@color/history_and_forecast_green"
        app:cardCornerRadius="@dimen/components_corner_radius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:cardBackgroundColor="@android:color/holo_green_light">

        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:gravity="center"
          android:orientation="vertical">

          <ImageView
            android:id="@+id/imageNoDataAvailable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_no_data_available"
            android:visibility="gone" />

          <TextView
            android:id="@+id/textViewMeasurementValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/city_select_measure_text_color"
            android:textSize="@dimen/city_measure_value_size"
            android:visibility="visible"
            tools:text="22" />

          <TextView
            android:id="@+id/textViewMeasurementUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/city_select_measure_text_color"
            android:textSize="@dimen/measure_label_size"
            tools:text="ug/m3" />

        </LinearLayout>
      </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

  </androidx.cardview.widget.CardView>

</LinearLayout>
