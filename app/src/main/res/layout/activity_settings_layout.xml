<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/gray"
  tools:context=".settings.SettingsActivityLayout">


  <Button
    android:id="@+id/language"
    android:layout_width="350dp"
    android:layout_height="70dp"
    android:background="@color/white"
    android:text="Change language"
    app:layout_constraintBottom_toTopOf="@+id/about"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"

    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/include" />

  <Button
    android:id="@+id/about"
    android:layout_width="350dp"
    android:layout_height="70dp"
    android:background="@color/white"
    android:text="About pulse.eco"
    app:layout_constraintBottom_toTopOf="@+id/opensrc"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/language" />

  <Button
    android:id="@+id/opensrc"
    android:layout_width="350dp"
    android:layout_height="70dp"
    android:background="@color/white"
    android:text="Open source libraries"
    app:layout_constraintBottom_toTopOf="@+id/textView2"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/about" />

  <TextView
    android:id="@+id/textView2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:text="\u00A9 2023 pulse.eco. All rights reserved. "
    android:textColor="@color/purple_dark_A50"
    android:textSize="13dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/opensrc" />

  <include
    android:id="@+id/include"
    layout="@layout/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />


</androidx.constraintlayout.widget.ConstraintLayout>

