<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/white"
  tools:context=".dashboard.DashboardFragment">



  <include
    android:id="@+id/include"
    layout="@layout/city_select_item_layout" />


  <androidx.cardview.widget.CardView
    android:id="@+id/cardView"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="0.9"
    app:cardCornerRadius="@dimen/components_corner_radius"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/include"
    android:layout_marginTop="30dp"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/city_select_item_overlay">

      <include
        layout="@layout/weekly_average"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="20dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

  </androidx.cardview.widget.CardView>

  <androidx.cardview.widget.CardView
    android:id="@+id/graphCard"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="0.9"
    android:layout_marginTop="30dp"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
    app:cardCornerRadius="@dimen/components_corner_radius"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/cardView">

      <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/dashboardGraph"
        android:layout_width="match_parent"
        android:layout_height="219dp"
        android:layout_marginRight="15dp"
        tools:visibility="visible" />

  </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>