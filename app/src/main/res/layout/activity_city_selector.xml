<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/white"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/city_selector_margin"
    android:orientation="vertical">

    <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/text_search"
      android:hint="@string/search"
      android:autofillHints="@string/search"
      android:inputType="text"
      android:layout_marginTop="@dimen/city_select_search_marginTop"/>

    <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/countryCityRecyclerView"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scrollbars="vertical"
      android:layout_marginTop="@dimen/city_select_recyclerView_marginTop"
      >
    </androidx.recyclerview.widget.RecyclerView>

  </LinearLayout>
  <com.google.android.material.floatingactionbutton.FloatingActionButton
    android:id="@+id/fab_check"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|end"
    android:layout_margin="@dimen/city_selector_margin"
    app:fabSize="normal"
    android:contentDescription="@string/fab_content_desc"
    app:srcCompat="@drawable/ic_check_white"/>


</androidx.coordinatorlayout.widget.CoordinatorLayout>