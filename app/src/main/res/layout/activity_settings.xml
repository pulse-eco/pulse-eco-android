<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  app:cardBackgroundColor="@color/white"
  android:fitsSystemWindows="true">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <ImageView
      android:id="@+id/pulseAppbarLogo"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:clickable="true"
      android:contentDescription="pulse eco logo"
      android:debuggable="true"
      android:focusable="true"
      android:src="@drawable/ic_pulseappbar_logo"
      app:layout_constraintBottom_toTopOf="@+id/settings_go_back"
      app:layout_constraintEnd_toEndOf="parent"

      app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.Toolbar
      android:id="@+id/settings_go_back"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingLeft="10dp"
      android:paddingRight="30dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="1.0">


      <Button
        android:id="@+id/btn_back"
        android:layout_width="@dimen/country_city_selector_back_btn_size"
        android:layout_height="@dimen/country_city_selector_back_btn_size"
        android:layout_marginEnd="@dimen/country_city_selector_back_btn_margin_right"
        android:background="@drawable/ic_left_arrow"
        android:textColor="@color/white" />


      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_display"
        android:gravity="center_vertical"
        android:text="Settings"
        android:textColor="@color/black"
        android:textFontWeight="500"
        android:textSize="21sp"
        tools:targetApi="p" />

    </androidx.appcompat.widget.Toolbar>

  </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>



