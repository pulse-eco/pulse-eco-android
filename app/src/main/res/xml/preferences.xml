<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <PreferenceCategory android:title="@string/settings_option_title_language">
    <ListPreference
      android:defaultValue="en"
      android:dialogTitle="Languages"
      android:entries="@array/language_picker"
      android:entryValues="@array/lang_value"
      android:key="language_preference"
      android:title="@string/settings_option_sub_title_language"
      android:widgetLayout="@layout/preference_layout"
      app:useSimpleSummaryProvider="true" />
  </PreferenceCategory>

  <PreferenceCategory android:title="@string/settings_option_title_about">
    <Preference
      android:key="preference_about"
      android:title="@string/settings_option_sub_title_about"
      android:widgetLayout="@layout/preference_layout"
      app:fragment=".settings.AboutTextFragment" />
  </PreferenceCategory>

  <PreferenceCategory android:title="@string/settings_option_title_libraries">
    <Preference
      android:key="preference_libraries"
      android:title="@string/settings_option_sub_title_libraries"
      android:widgetLayout="@layout/preference_layout"
      app:fragment=".settings.UsedLibrariesFragment" />
  </PreferenceCategory>

  <PreferenceCategory android:title="@string/disclaimer">
    <Preference
      android:key="preference_disclaimer"
      android:title="@string/disclaimer_message"
      android:widgetLayout="@layout/preference_layout"
      app:fragment=".settings.DisclaimerFragment"
      app:singleLineTitle="true" />
  </PreferenceCategory>

</PreferenceScreen>
